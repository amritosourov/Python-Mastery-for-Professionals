<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Home Screen'
        Button:
            text: 'Go to Settings'
            on_press: app.root.current = 'settings'

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Settings Screen'
        Button:
            text: 'Back to Home'
            on_press: app.root.current = 'home'
